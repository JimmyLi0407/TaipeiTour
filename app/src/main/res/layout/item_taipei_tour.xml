<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Item_Taipei_Tour_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Item_Taipei_Tour_VGuideline_30"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Item_Taipei_Tour_VGuideline_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Item_Taipei_Tour_HGuideline_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/Item_Taipei_Tour_Title"
        android:text="@string/Item_Taipei_Tour_Title"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/Item_Taipei_Tour_VGuideline_30"
        app:layout_constraintRight_toRightOf="@id/Item_Taipei_Tour_VGuideline_90"
        app:layout_constraintBottom_toBottomOf="@id/Item_Taipei_Tour_HGuideline_40"/>

    <TextView
        android:id="@+id/Item_Taipei_Tour_Content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:lines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/Item_Taipei_Tour_HGuideline_40"
        app:layout_constraintLeft_toLeftOf="@id/Item_Taipei_Tour_VGuideline_30"
        app:layout_constraintRight_toRightOf="@id/Item_Taipei_Tour_VGuideline_90"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Item_Taipei_Tour_VGuideline_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/Item_Taipei_Tour_TextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:text="@string/next"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/Item_Taipei_Tour_VGuideline_90"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>